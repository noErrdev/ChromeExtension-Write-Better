{
    "name": "Write Better",
    "version": "0.1",
    "description": "Grammar suggestions",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "browser_action": {
        "name": "Click to enable/disable grammar checks",
        "default_icon": "disabled.png"
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}